<!DOCTYPE html>
<html>
<style>
  body,
  html {
    padding: 0;
    margin: 0;
    outline: 0;
    border: 0;
  }

  #loading {
    transition: all 1s;
    outline: 0;
    background: #444 url('/media/img/loading.apng') center no-repeat;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    padding: 0;
    margin: 0;
  }
</style>
<div id="loading"></div>
<!-- 加载图标 -->
<%- include('./_blocks/head', { siteTitle: themeConfig.siteName }) %>

  <body>
    <div id="body-bg">
      <!-- 一些组件 -->
      <div id="tea_box"></div>
      <div id="img_top_box_bg" onclick="imgClosed()"></div>
      <div id="closed"></div>
      <div id="body">
        <div class="mains">
          <!--书左侧内容和封面 -->
          <div id="book-left">
            <%- include('./_blocks/book_left') %>
          </div>
          <div id="book-right">
            <!--书签 -->
            <%- include('./_blocks/nav') %>
              <div id="axjx_box">
                <div id="axjx_box2">
                  <!-- 主题内容，请修改以下内容 -->
                  <div id="postbox">
                    <!-- 文章 -->
                    <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
                      <h1 class="post-title" itemprop="name headline">
                        <a pajx-right itemtype="url" href="<%= post.link %>">
                          <%= post.title %>
                        </a>
                      </h1>
                      <ul class="post-meta">
                        <li><a pajx-right class="current" href="/comment"> 留言板
                        </a></li>    
                        <li>
                          <%= post.dateFormat %>
                        </li>     
                        <li><a pajx-right id="home" class="current" href="/">首页
                          </a></li>
                      </ul>
                      <div class="post-content" itemprop="articleBody">
                        <%- post.content %>
                      </div>
                    </article>
                    <!-- 文章end -->
                  </div> <!--postbox end-->
                  <!-- 主题内容，请修改以上内容 -->
                  <!-- 右侧进度条 -->
                  <div id="rightSchedule"></div>
                  <script>
                    if(ismMobile()){
                      $("#book-left").css({"margin-left":"-100%"})
                    }else{
                      $("#category").children("a").attr("pajx-left", "");
                      $(".tags").children("a").attr("pajx-left", "");
                      openBook("withOutAnimat");
                      var ps = new PerfectScrollbar('#postbox', {wheelSpeed: 0.5,swipeEasing: false,suppressScrollX: false});
                    }
                    if ($("#post_box").height()  > 800) {rightSchedule();};
                    var img = $(".post-content").find("img");
                    if (img.length > 0) {imgStyle(img);img.click(function () {imgbig(this);});};
                  </script>
                </div><!--axjx_box2 end-->
              </div><!--axjx_box end-->
              <div class="book-shadow"></div>
          </div><!--book-right end-->
          
        </div><!--mains end-->
      </div><!--body end-->
      <%- include('./_blocks/footer') %>
    </div><!--body-bg end-->
  </body>

</html>