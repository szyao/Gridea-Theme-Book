<!DOCTYPE html>
<html>
<style>
  body,
  html {
    padding: 0;
    margin: 0;
    outline: 0;
    border: 0;
  }

  #loading {
    transition: all 1s;
    outline: 0;
    background: #444 url('/media/img/loading.apng') center no-repeat;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    padding: 0;
    margin: 0;
  }
</style>
<div id="loading"></div>
<!-- 加载图标 -->
<%- include('./_blocks/head', { siteTitle: themeConfig.siteName }) %>

  <body>
    <div id="body-bg">
      <!-- 一些组件 -->
      <div id="tea_box"></div>
      <div id="img_top_box_bg" onclick="imgClosed()"></div>
      <div id="closed"></div>
      <div id="body">
        <div class="mains">
          <!--书左侧内容和封面 -->
          <div id="book-left">
            <%- include('./_blocks/book_left') %>
          </div>
          <div id="book-right">
            <!--书签 -->
            <%- include('./_blocks/nav') %>
            <!-- 主题内容，请修改以下内容 -->
            <div id="axjx_box">
              <div id="postbox">
                <div class="site-name">
                  <div id="logo">
                    <%- site.customConfig.auther %>
                  </div>
                  <p class="description"> -<%- themeConfig.siteDescription %>- </p>
                </div>
                <!--评论位置-->
              </div>
              <!-- 主题内容，请修改以上内容 -->
              <!-- 自适应手机-->
              <script>
                function checkScreenWidth() {
                    var divElement = document.getElementById('book-left');
                    var screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
                    divElement.style.display = 'block';
                }
                // 初始检查屏幕宽度
                checkScreenWidth();
              </script>
            </div>
            <div class="book-shadow"></div>
          </div>
          <% if (site.customConfig.open) { %>
            <script>
              var openbooktime = 1000; //自动打开书本延迟。单位为毫秒。
              var openbookset = setTimeout(function () {
                openBook();
              }, openbooktime);
            </script>
          <% } %>
          <!-- 自动打开 #main-->
        </div>
        <!-- end #mians -->
      </div>
      <!-- end #body -->
      <%- include('./_blocks/footer') %>
    </div>
    <!-- end #body-bg -->
  </body>
</html>